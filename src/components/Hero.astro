<div class="px-6 md:px-24 lg:px-48 xl:px-64 2xl:px-96 w-full h-screen flex flex-col items-start justify-end">
  <div class="flex gap-0 text-[8rem] md:text-[12rem] lg:text-[16rem] tracking-tighter font-semibold italic">
    <span id="h" class="text-stone-400 hidden">H</span>
    <span id="i" class="text-stone-400 hidden">i</span>
    <span id="exclamation" class="text-amber-600 hidden">!</span>
    <span id="underscore">_</span>
  </div>
</div>

<script>
  const under = document.getElementById('underscore')
  const h = document.getElementById('h')
  const i = document.getElementById('i')
  const exclamation = document.getElementById('exclamation')

  setTimeout(()=>{
    if (!h) return
    h.classList.remove('hidden')
  }, 1000)

  setTimeout(()=>{
    if (!i) return
    i.classList.remove('hidden')
  }, 1100)

  setTimeout(()=>{
    if (!exclamation) return
    exclamation.classList.remove('hidden')
  }, 1200)

  setInterval(()=>{
    if (!under) return
    if (under.classList.contains('text-white/0')) {
      under.classList.remove('text-white/0')
    } else {
      under.classList.add('text-white/0')
    }
  }, 600)
</script>